
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.ExpensesList.load

# Routes for users
GET     /login                      controllers.ExpensesList.login
+nocsrf
POST    /validate                   controllers.ExpensesList.validate()
+nocsrf
POST	/createUser                 controllers.ExpensesList.createUser
GET     /logout                     controllers.ExpensesList.logout

# Routes for expenses
GET     /list                       controllers.ExpensesList.expenseList
+nocsrf
POST	/addExpense                 controllers.ExpensesList.addExpense
+nocsrf
POST	/deleteExpense              controllers.ExpensesList.deleteExpense

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)